{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "fs": {
    "scope": [
      "**"
    ]
  },
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "fs:allow-app-write",
    "fs:allow-app-write-recursive",
    "fs:allow-appcache-write",
    "fs:allow-appcache-write-recursive",
    "shell:allow-execute",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    "shell:default"
  ]
}